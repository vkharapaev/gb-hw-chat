<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ru.geekbrains.hw.chat.client.frameworks.views.ChatView">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <children>
        <TextArea fx:id="chatTextArea" editable="false" focusTraversable="false" wrapText="true" GridPane.columnSpan="2"
                  GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
        <TextField fx:id="messageTextField" onAction="#sendAction" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
        <Button onAction="#sendAction" text="Send" GridPane.columnIndex="1" GridPane.hgrow="NEVER"
                GridPane.rowIndex="1"/>
    </children>

</GridPane>
